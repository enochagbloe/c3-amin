generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ExpenseTracker {
  id       String   @id @default(cuid())
  name     String
  amount   Float
  date     DateTime @default(now())
  status   Status   @default(pending)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  author   String
  description String?
  organizationId String?
  
  organization  Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Author from MongoDb Users collection
  
  @@index([author])
  @@index([date])
  @@index([organizationId])
}

enum Status {
  pending
  approved
  rejected
}

model Income {
  id            String    @id @default(uuid())
  name          String                
  userId        String
  amount        Float
  source        String
  description   String?
  date          DateTime   @default(now())
  createdAt     DateTime   @default(now())
  organizationId String?
  customValues  IncomeCustomValue[]
  
  organization  Organization? @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  
  @@index([organizationId])
}

model CustomField {
  id            String                @id @default(uuid())
  userId        String
  name          String
  type          FieldType
  required      Boolean               @default(false)
  options       String[] @default([])            // only for SELECT type
  createdAt     DateTime              @default(now())

  customValues  IncomeCustomValue[]
}

model IncomeCustomValue {
  id           String       @id @default(uuid())
  incomeId     String
  fieldId      String
  value        String       // stored as string, parsed in UI

  income       Income       @relation(fields: [incomeId], references: [id])
  customField  CustomField  @relation(fields: [fieldId], references: [id])
}

enum FieldType {
  TEXT
  NUMBER
  DATE
  SELECT
  TOGGLE
}



model Organization {
  id        String   @id @default(uuid())
  name      String
  email     String?  // contact email for the org
  bio       String?  // short description / about
  industry  Industry

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  members   OrganizationMember[]
  expenses  ExpenseTracker[]
  income    Income[]
}

enum Industry {
  CHURCH
  RETAIL
  SHOP
  SOFTWARE
  EDUCATION
  NON_PROFIT
  FINANCE
  HEALTHCARE
  OTHER
}


model OrganizationMember {
  id             String @id @default(uuid())
  userId         String
  organizationId String
  role           OrganizationRole @default(MEMBER)
  joinedAt       DateTime @default(now())
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@unique([userId, organizationId])
}


enum OrganizationRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}
